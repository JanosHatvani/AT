<Window x:Class="AppDisplayUI.AppDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Display"
        MinWidth="600" MinHeight="870"
        Width="700" Height="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#1E1E1E">

    <Window.Resources>

        <!-- Alap gombstílus -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#822" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A22" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Másodlagos gombstílus -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Lekerekített hátterű "TextBlock" stílus -->
        <Style x:Key="RoundedLabelStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0 10 0 10"/>
        </Style>

    </Window.Resources>

    <Border CornerRadius="12"
            Background="#1E1E1E"
            BorderBrush="#555"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Felső vezérlősor -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bezárás gomb -->
                <Button Content="❌ Bezárás"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Margin="10"
                        Style="{StaticResource ButtonStyle}"
                        Padding="10,5"
                        Width="100"
                        Click="BtnClose_Click"
                        Background="#444"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"/>

         
                <!--<Border Style="{StaticResource RoundedLabelStyle}" Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <TextBlock Text="Csatlakoztatott eszköz:"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>
     
                <TextBox Text=""
                         Foreground="White"
                         Grid.Column="2"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Background="#444"
                         Margin="0 10 10 10"
                         Padding="10,5"
                         Width="150">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>-->

                <Button Content="🔍 Inspect indítása"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="10"
                        Style="{StaticResource ButtonStyle}"
                        Grid.Column="2"
                        Padding="10,5"
                        Click="BtnScreenshot_Click"
                        Background="#444"
                        Foreground="White"
                        FontWeight="Bold"
                        x:Name="BtnInspect"
                        Width="140"
                        BorderThickness="0"/>

                <!-- Screenshot gomb -->
                <Button Content="📸 Prrtsc"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="10"
                        Style="{StaticResource ButtonStyle}"
                        Grid.Column="3"
                        Padding="10,5"
                        Click="BtnScreenshot_Click"
                        Background="#444"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="100"
                        BorderThickness="0"/>
            </Grid>

            <!-- Kép megjelenítő rész -->
            <Border Margin="10"
                    CornerRadius="12"
                    Background="#222"
                    Grid.Row="1"
                    BorderBrush="#555"
                    BorderThickness="2">
                <Grid x:Name="ImageContainer"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">

                    <Image x:Name="PreviewImage"
                           Width="600"
                           Height="820"
                           Stretch="Uniform"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </Border>


        </Grid>
    </Border>
</Window>
