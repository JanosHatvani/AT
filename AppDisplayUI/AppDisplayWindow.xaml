<Window x:Class="AppDisplayUI.AppDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Display"
        Width="650" Height="1000"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#822" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A22" />
                </Trigger>
            </Style.Triggers>
            
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border CornerRadius="12"
            Background="#1E1E1E"
            BorderBrush="#555"
            BorderThickness="2"
            >
            
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            
            <Button Content="❌ Bezárás"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="0"
                Margin="10"
                Style="{StaticResource ButtonStyle}"
                Padding="10,5"
                Click="BtnClose_Click"
                Background="#444"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"/>

            <TextBlock Text="Csatlakoztatott eszköz:"
                   Foreground="White"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Background="#444"
                   Margin="0 10 0 10"
                   Padding="10,5">
                <TextBlock.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/> 
                    </Style>
                </TextBlock.Resources>
            </TextBlock>

            <TextBox Text=""
                 Foreground="White"
                 Grid.Column="2"
                 
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Background="#444"
                 Margin="0 10 10 10"
                 Padding="10,5"
                 Width="150">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

        <Button Content="📸 Prrtsc"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="10"
                Style="{StaticResource ButtonStyle}"
                Grid.Column="3"
                Padding="10,5"
                Click="BtnScreenshot_Click"
                Background="#444"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"/>
        </Grid>

        <Border Margin="10"
                CornerRadius="12"
                Background="#222"
                Grid.Row="1"
                BorderBrush="#555"
                BorderThickness="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="App Display"
                           FontSize="22"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="DeviceText"
                           Text="Device: --"
                           Foreground="Gray"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
                <Image x:Name="PreviewImage"
                       Width="600"
                       Height="855"
                       Stretch="Uniform"
                       Margin="0,15,0,0"/>
            </StackPanel>
        </Border>            
     </Grid>
    </Border>
</Window>
