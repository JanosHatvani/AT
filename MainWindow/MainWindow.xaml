        <Style x:Key="PauseResumeButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image x:Name="icon" Height="20" VerticalAlignment="Center"/>
                                <TextBlock x:Name="label" Margin="15,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- ALAPÁLLAPOT: Nem szünetel -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="icon" Property="Source" Value="/Resources/Icons/pause-test-25_white.png"/>
                                <Setter TargetName="label" Property="Text" Value="Teszt szünet"/>
                            </Trigger>

                            <!-- SZÜNETEL: Restart ikon -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="icon" Property="Source" Value="/Resources/Icons/restart-test-25_white.png"/>
                                <Setter TargetName="label" Property="Text" Value="Teszt folytatás"/>
                            </Trigger>

                            <!-- Egér ráhúzás: PAUSE ikon esetén -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="icon" Property="Source" Value="/Resources/Icons/pause-test-25_green.png"/>
                            </MultiTrigger>

                            <!-- Egér ráhúzás: RESTART ikon esetén -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="icon" Property="Source" Value="/Resources/Icons/restart-test-25_green.png"/>
                            </MultiTrigger>

                            <!-- Gomb lenyomva: PAUSE -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsPressed" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="icon" Property="Source" Value="/Resources/Icons/pause-test-25_green.png"/>
                            </MultiTrigger>

                            <!-- Gomb lenyomva: RESTART -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsPressed" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="icon" Property="Source" Value="/Resources/Icons/restart-test-25_green.png"/>
                            </MultiTrigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


