            MinHeight="700" MinWidth="1450"
            Icon="/at_icon.ico"
            WindowStyle="None"
            WindowStartupLocation="CenterScreen"
            Background="Transparent"    
            AllowsTransparency="True"
            ResizeMode="CanResizeWithGrip"     
            SizeToContent="Manual"
