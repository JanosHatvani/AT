<Window x:Class="TestAutomationUI.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="800" 
        Icon="/at_icon.ico"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"    
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        ResizeMode="NoResize"  
        >

    <Window.Resources>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#06202B"/>
            <Setter Property="BorderBrush" Value="#077A7D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#06202B"/>
            <Setter Property="BorderBrush" Value="#077A7D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,5,0"/>

        </Style>

        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#06202B"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#077A7D"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="8"
                    Padding="{TemplateBinding Padding}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3FD2A4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#064789"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#06202B" CornerRadius="25">

            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>

                <!-- HEADER TOP MEZŐK -->

                <TextBlock Text="Várakozási idő (mp):" Grid.Row="1" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="waitTimeText" Grid.Row="1" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>

                <TextBlock Text="Indítandó program:" Grid.Row="2" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="programPathTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>

                <TextBlock Text="Indítandó weboldal:" Grid.Row="4" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="webPathTextBox" Grid.Row="4" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>

                <TextBlock Text="IOS devicename:" Grid.Row="5" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="iosdevicename" Grid.Row="5" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Ios platformVersion:" Grid.Row="6" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="iosplatformversion" Grid.Row="6" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Ios bundleID:" Grid.Row="7" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="iosbundleid" Grid.Row="7" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>


                <TextBlock Text="Android devicename:" Grid.Row="8" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="androiddevicename" Grid.Row="8" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Android platformVersion:" Grid.Row="9" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="androidplatformversion" Grid.Row="9" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Android appActivity:" Grid.Row="10" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="androidappactivity" Grid.Row="10" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Android appPackage:" Grid.Row="11" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="androidapppackage" Grid.Row="11" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>


                <TextBlock Text="Képek mentés mappa:" Grid.Row="3" Grid.Column="0" Margin="5" Style="{StaticResource ModernTextBlock}"/>
                <TextBox x:Name="screenshotFolderTextBox" Grid.Row="3" Grid.Column="1" Margin="5" Style="{StaticResource ModernTextBox}"/>

                <CheckBox x:Name="fastModeCheckBox" Content="Gyors üzemmód" Grid.Row="12" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource CheckBox}"/>

                <StackPanel Grid.Row="13" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Mentés"
                        Margin="5"
                        Padding="20"
                        Style="{StaticResource ModernButtonStyle}" 
                            Click="SettingsButton_Click"
                        />
                    <Button Content="Mégse"
                        Margin="5"
                        Padding="20"
                        Style="{StaticResource ModernButtonStyle}" Click="SettingsClose_Click" 
                        
                        />
                </StackPanel>

            </Grid>

    </Border>
</Window>
