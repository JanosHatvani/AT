<Window x:Class="TestAutomationUI.ElementInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Height="1024" Width="1600"
        WindowStyle="None"
        AllowsTransparency="True"
        MinHeight="700" MinWidth="1050"
        Icon="/at_icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>

            <Style x:Key="NoHoverButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


    </Window.Resources>

        <Border CornerRadius="10" Background="#093A3E" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- WebView -->
            <wv2:WebView2 x:Name="webView" Grid.Column="0" />

            <!-- Jobb oldali Border a szövegdoboznak és kilépés gombnak -->
            <Border Grid.Column="1"
                    CornerRadius="10"
                    Background="#0E4B4F"
                    Margin="0"
                    Padding="10">
                <Grid>
                    <!-- Z-alakú egymásra helyezés -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Gomb -->
                        <RowDefinition Height="*"/>
                        <!-- Szöveg -->
                    </Grid.RowDefinitions>

                    <!-- Kilépés gomb -->
                    <Button x:Name="closeButton"
                            Style="{StaticResource NoHoverButtonStyle}" 
                            Content="✕"
                            Width="32" Height="32"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,0,0,10"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Grid.Row="0"/>

                    <!-- Részletek TextBox -->
                    <TextBox x:Name="DetailsTextBox"
                             Grid.Row="1"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="14"
                             AcceptsReturn="True"
                             Padding="10"
                             Foreground="White"
                             Background="#0E4B4F"
                             BorderBrush="Transparent"
                             BorderThickness="1"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
